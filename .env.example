# Application
APP_NAME=crawl-ai
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://crawlai:crawlai@localhost:5432/crawlai
REDIS_URL=redis://localhost:6379/0

# AI API Keys (Fallback order: OpenAI -> Gemini -> Claude -> Perplexity)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_API_KEY=your-google-api-key
PERPLEXITY_API_KEY=pplx-your-perplexity-key

# AI Model Settings
DEFAULT_AI_PROVIDER=openai
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229
GOOGLE_MODEL=gemini-pro
PERPLEXITY_MODEL=pplx-70b-online

# Slack Notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_DEFAULT_CHANNEL=#ai-alerts

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=crawl-ai@example.com

# Scheduler Settings
SCHEDULER_TIMEZONE=Asia/Seoul
CRAWLER_DEFAULT_TIMEOUT=30
CRAWLER_MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
